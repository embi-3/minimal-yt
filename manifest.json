{
  "name": "Minimal YT",
  "description": "Remove the fluff from YouTube",
  "version": "1.0",
  "manifest_version": 3,
  "action": {
    "default_popup": "default.html",
    "default_icon": "images/wumpus.png"
  },
  "background": {
    "service_worker": "scripts/background.js"
  },
  "permissions": [
    "scripting",
    "tabs"
  ],
  "host_permissions": [
    "https://www.youtube.com/shorts/*"
  ]
}
